<p id="notice"><%= notice %></p>

<h1>Listing Periods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Is break</th>
      <th>Class timing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td><%= period.name %></td>
        <td><%= period.start_time %></td>
        <td><%= period.end_time %></td>
        <td><%= period.is_break %></td>
        <td><%= link_to 'Show', [@class_timing, period] %></td>
        <td><%= link_to 'Edit', edit_class_timing_period_path(@class_timing, period) %></td>
        <td><%= link_to 'Destroy', [@class_timing, period], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

